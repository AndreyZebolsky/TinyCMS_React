@page "{url?}"

@model IndexModel
@{
    ViewData["Title"] = Model.ContentPage.Title;
    ViewData["SiteTitle"] = Model.ContentPage.Site.Title;    
}

@section Head
{
    @if (Model.ContentPage.StyleSheetUrls is not null)
    {
        @foreach (var styleSheet in Model.ContentPage.StyleSheetUrls)
        {
            <link rel="stylesheet" href="@styleSheet" />
        }
    }

    @if (Model.ContentPage.Site.StyleSheetUrls is not null)
    {
        @foreach (var styleSheet in Model.ContentPage.Site.StyleSheetUrls)
        {
            <link rel="stylesheet" href="@styleSheet" />
        }
    }

    @if(!string.IsNullOrWhiteSpace(Model.ContentPage.StyleSheetContent))
    {
        <style type="text/css">
            @Model.ContentPage.StyleSheetContent
        </style>
    }

    @if(!string.IsNullOrWhiteSpace(Model.ContentPage.Site.StyleSheetContent))
    {
        <style type="text/css">
            @Model.ContentPage.Site.StyleSheetContent
        </style>
    }
}

<raw>@Model.ContentPage.Content</raw>